    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="120dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbarThongTin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text="Thông tin của chúng tôi"
            android:textColor="#000"
            android:textSize="30dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_people" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Dũng Hà"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_add_location" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="#000"
                android:text="141 Mẹ Thứ - Vĩnh Điện - Điện Bàn - Quảng Nam"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lienhe_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:id="@+id/image_thongtin_facebook"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="20sp"
                android:src="@drawable/icons_facebook" />
            <ImageView
                android:id="@+id/image_thongtin_instagram"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/icons_instagram"
                android:background="@null"
                android:layout_marginLeft="20sp"/>
            <ImageView
                android:id="@+id/image_thongtin_twitter"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/icon_twitter"
                android:background="@null"
                android:layout_marginLeft="20sp"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text="Trân trọng cảm ơn"
            android:textColor="#000"
            android:textSize="30dp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
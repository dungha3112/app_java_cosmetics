<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="8dp"
    app:cardCornerRadius="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layoutItem_sanpham"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/item_giohang_hinhanh"
            android:layout_marginRight="5dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:src="@drawable/ic_launcher_background"
            android:layout_width="100dp"
            android:layout_height="110dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/item_giohang_Tensp"
                android:text="Ten san pham"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:weightSum="4"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="5dp">
                <TextView
                    android:id="@+id/item_giohang_Giasp"
                    android:layout_weight="2.5"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="left"
                    android:textColor="#FF0000"
                    android:text="20000d"
                    android:textSize="18sp"
                    android:textStyle="italic" />
                <ImageView
                    android:id="@+id/item_giohang_Tru"
                    android:layout_weight="0.5"
                    android:src="@drawable/ic_remove"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    app:tint="#000"/>

                <TextView
                    android:id="@+id/item_giohang_SL"
                    android:layout_weight="0.5"
                    android:text="1"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"/>
                <ImageView
                    android:id="@+id/item_giohang_Cong"
                    android:layout_weight="0.5"
                    android:src="@drawable/ic_add"
                    android:layout_marginRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    app:tint="#000"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/item_giohang_thanhtien"
                    android:layout_width="wrap_content"
                    android:layout_height="52dp"
                    android:textAlignment="center"
                    android:layout_weight="2.5"
                    android:gravity="center"
                    android:text="20000d"
                    android:textColor="#FF0000"
                    android:textSize="18sp"
                    android:textStyle="italic" />

                <CheckBox
                    android:id="@+id/item_giohang_checkbox"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:padding="10dp"
                    android:gravity="center"/>
            </LinearLayout>



        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>